<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/edit_bg"
        android:padding="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/type_0"
            android:text="@string/type_0"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_1"
            android:text="@string/type_1"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_2"
            android:text="@string/type_2"
            android:layout_width="180dp"
            android:layout_height="35dp"
            
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_3"
            android:text="@string/type_3"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_4"
            android:text="@string/type_4"
            android:layout_width="180dp"
            android:layout_height="35dp"
             
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_5"
            android:text="@string/type_5"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_6"
            android:text="@string/type_6"
            android:layout_width="180dp"
            android:layout_height="35dp"
            
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_7"
            android:text="@string/type_7"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_8"
            android:text="@string/type_8"
            android:layout_width="180dp"
            android:layout_height="35dp"
             
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_9"
            android:text="@string/type_9"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_10"
            android:text="@string/type_10"
            android:layout_width="180dp"
            android:layout_height="35dp"
            
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/type_11"
            android:text="@string/type_11"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"/>

        <ImageButton
            android:id="@+id/type_confirm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_collapse"
            android:onClick="doClick"
            android:background="#00000000"/>

    </LinearLayout>
</ScrollView>

